<h3>{{viewtitle}}</h3>

<form action="/employee" method="POST" autocomplete="off"> 
<input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label>Name:</label>
        <input type="text" class="form-control" value="{{employee.fullname}}" name="fullname" placeholder="Name">
        

    </div>
    <div class="form-group">
        <label>Age:</label>
        <input type="text" class="form-control"  value="{{employee.age}}" name="age" placeholder="age">
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input type="email" class="form-control" value="{{employee.email}}"  name="email" placeholder="email">
        
    </div>
    <div class="form-group">
        <button type="submit" class="btn">Submit</button>
        <a class="btn btn-secondary" href="/employee/list">View Employee</a>
        
    </div>

</form>